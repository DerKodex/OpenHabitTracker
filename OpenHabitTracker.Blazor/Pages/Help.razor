@page "/help"

@using OpenHabitTracker.Services

@inject IStringLocalizer Loc
@inject ILinkAttributeService LinkAttributeService
@inject SettingsService SettingsService

<PageTitle>OpenHabitTracker - Help</PageTitle>

<div @ref="WrapperElement" class="@($"col child-column px-0 px-md-{SettingsService.Settings.HorizontalMargin}")">
    <div class="m-2">

        <h5>@Loc["Header"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-three-dots-vertical"></i> <span class="mx-3">@Loc["Menu"]:</span>@Loc["toggle the menu on and off"]</li>
            <li><i class="bi bi-house"></i> <span class="mx-3">@Loc["Home"]:</span>@Loc["see all your items"]</li>
            <li><i class="bi bi-sticky"></i> <span class="mx-3">@Loc["Notes"]:</span>@Loc["see all your Notes"]</li>
            <li><i class="bi bi-list-task"></i> <span class="mx-3">@Loc["Tasks"]:</span>@Loc["see all your Tasks"]</li>
            <li><i class="bi bi-repeat"></i> <span class="mx-3">@Loc["Habits"]:</span>@Loc["see all your Habits"]</li>
        </ul>

        <h5>@Loc["Menu"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Trash"]:</span>@Loc["see all your deleted items"]</li>
            <li><i class="bi bi-search"></i> <span class="mx-3">@Loc["Search, Filter, Sort"]:</span>@Loc["Search, filter and sort all your items"]</li>
            <li><i class="bi bi-gear"></i> <span class="mx-3">@Loc["Settings"]:</span>@Loc["Adjust app appearance"]</li>
            <li><i class="bi bi-tag"></i> <span class="mx-3">@Loc["Categories"]:</span>@Loc["manage categories"]</li>
            <li><i class="bi bi-database"></i> <span class="mx-3">@Loc["Data"]:</span>@Loc["export, import or delete all your data"]</li>
        </ul>

        <h5>@Loc["Home"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-sticky"></i> <span class="mx-3">@Loc["Notes"]:</span>@Loc["see all your Notes"]</li>
            <li><i class="bi bi-list-task"></i> <span class="mx-3">@Loc["Tasks"]:</span>@Loc["see all your Tasks"]</li>
            <li><i class="bi bi-repeat"></i> <span class="mx-3">@Loc["Habits"]:</span>@Loc["see all your Habits"]</li>
        </ul>

        <h5>@Loc["Notes"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-plus-square"></i> <span class="mx-3">@Loc["Add new note"]</span></li>
            <ul style="list-style: none;">
                <li>@Loc["Set note priority (⊘,︾,﹀,—,︿,︽)"]</li>
                <li>@Loc["Add note title"]</li>
                <li><i class="bi bi-floppy"></i> <span class="mx-3">@Loc["Save new note"]</span></li>
                <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Cancel adding new note"]</span></li>
                <li>@Loc["Add note text"]</li>
                <li>@Loc["Set note category"]</li>
            </ul>
            <li>@Loc["Read only note"]</li>
            <ul style="list-style: none;">
                <li>@Loc["Note priority (⊘,︾,﹀,—,︿,︽)"]</li>
                <li>@Loc["Note title: click to enter edit mode"]</li>
                <li>@Loc["Note text: displayed as Markdown (HTTP links are clickable) if 'Display note content as Markdown' is checked in Settings"]</li>
            </ul>
            <li>@Loc["Edit note"]</li>
            <ul style="list-style: none;">
                <li>@Loc["Set note priority (⊘,︾,﹀,—,︿,︽)"]</li>
                <li>@Loc["Edit note title"]</li>
                <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Delete note"]</span></li>
                <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Exit edit mode"]</span></li>
                <li>@Loc["Edit note text"]</li>
                <li>@Loc["Set note category"]</li>
            </ul>
        </ul>

        <h5>@Loc["Tasks"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-plus-square"></i> <span class="mx-3">@Loc["Add new task"]</span></li>
        </ul>

        <h5>@Loc["Habits"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-plus-square"></i> <span class="mx-3">@Loc["Add new habit"]</span></li>
        </ul>

        <h5>@Loc["Trash"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-recycle"></i> <span class="mx-3">@Loc["Restore all"]:</span>@Loc["restore all deleted items"]</li>
            <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Empty trash"]:</span>@Loc["permanently delete all trash items"]</li>
            <li>@Loc["Deleted item"]</li>
            <ul style="list-style: none;">
                <li><i class="bi bi-recycle"></i> <span class="mx-3">@Loc["Restore deleted item"]</span></li>
                <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Permanently delete trash item"]</span></li>
            </ul>
        </ul>

        <h5>@Loc["Search, Filter, Sort"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-search"></i> <span class="mx-3">@Loc["Search"]</span></li>
            <ul style="list-style: none;">
                <li>@Loc["Search notes, tasks, habits"]</li>
                <li><i class="bi bi-type"></i> <span class="mx-3">@Loc["Match search case"]</span></li>
                <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Clear search"]</span></li>
            </ul>
            <li><i class="bi bi-filter"></i> <span class="mx-3">@Loc["Filter"]</span></li>
            <ul style="list-style: none;">
                <li>@Loc["Planned"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Planned: click to filter by current date"]</li>
                    <li>@Loc["Operator: choose date comparison (<,=,>,≠)"]</li>
                    <li>@Loc["Date: set the date for comparison"]</li>
                    <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Clear the date"]</span></li>
                </ul>
                <li>@Loc["Done"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Done: click to filter by current date"]</li>
                    <li>@Loc["Operator: choose date comparison (<,=,>,≠)"]</li>
                    <li>@Loc["Date: set the date for comparison"]</li>
                    <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Clear the date"]</span></li>
                </ul>
                <li>@Loc["Categories: filter notes, tasks and habity by category"]</li>
                <li>@Loc["Priorities: filter notes, tasks and habity by priority"]</li>
                <li>@Loc["Habit interval ratio"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Elapsed time to average interval: compare the time elapsed since the habit was last done to the average repeat interval for the habit"]</li>
                    <li>@Loc["Elapsed time to repeat interval: compare the time elapsed since the habit was last done to the desired repeat interval for the habit"]</li>
                    <li>@Loc["Average interval to repeat interval: compare the average repeat interval to the desired repeat interval for the habit"]</li>
                </ul>
                <li>@Loc["Habits with interval ratio: show only habits that have the selected interval ratio at least X% where X is between 0 and 100"]</li>
            </ul>
            <li><i class="bi bi-arrow-down-up"></i> <span class="mx-3">@Loc["Sort"]</span></li>
            <ul style="list-style: none;">
                <li>@Loc["Notes"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Category"]</li>
                    <li>@Loc["Priority"]</li>
                    <li>@Loc["Title"]</li>
                </ul>
                <li>@Loc["Tasks"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Category"]</li>
                    <li>@Loc["Priority"]</li>
                    <li>@Loc["Title"]</li>
                    <li>@Loc["Duration"]</li>
                    <li>@Loc["Elapsed time"]</li>
                    <li>@Loc["Planned at"]</li>
                    <li>@Loc["Time spent"]</li>
                </ul>
                <li>@Loc["Habits"]</li>
                <ul style="list-style: none;">
                    <li>@Loc["Category"]</li>
                    <li>@Loc["Priority"]</li>
                    <li>@Loc["Title"]</li>
                    <li>@Loc["Duration"]</li>
                    <li>@Loc["Repeat interval"]</li>
                    <li>@Loc["Average interval"]</li>
                    <li>@Loc["Time spent"]</li>
                    <li>@Loc["Average time spent"]</li>
                    <li>@Loc["Elapsed time"]</li>
                    <li>@Loc["Selected interval ratio"]</li>
                </ul>
            </ul>
        </ul>

        <h5>@Loc["Settings"]:</h5>
        <ul class="list-unstyled">
            <li>@Loc["Dark mode: toggle between light and dark mode"]</li>
            <li>@Loc["Theme: choose between 26 themes"]</li>
            <li>@Loc["Start page: choose which main screen is shown every time the app starts"]</li>
            <li>@Loc["Start sidebar: choose which submenu screen screen is shown every time the app starts"]</li>
            <li>@Loc["Show item list: display the list of items under tasks and habits"]</li>
            <li>@Loc["Show small calendar: show the one line calendar in habits"]</li>
            <li>@Loc["Show large calendar: show the month calendar in habits"]</li>
            <li>@Loc["Show color: show the setting for the title color in notes, tasks and habits"]</li>
            <li>@Loc["Show created & updated: show time and date when a note/task/habit was created and last updated"]</li>
            <li>@Loc["Language: choose the app language"]</li>
            <li>@Loc["Week start: choose the first day of the week for the month calendar in habits"]</li>
            <li>@Loc["Insert tabs in note content: pressing the TAB key will insert a tab in note text instead of shifting focus away from the edit window"]</li>
            <li>@Loc["Display note content as Markdown: note text will be converted to Markdown for display, HTML links will be clickable"]</li>
            <li>@Loc["Horizontal space: set the horizontal spacing between columns on the main screen"]</li>
            <li>@Loc["Vertical space: set the vertical spacing between each note/task/habit"]</li>
        </ul>

        <h5>@Loc["Categories"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-plus-square"></i> <span class="mx-3">@Loc["Add new category"]</span></li>
            <li>@Loc["Category"]</li>
            <ul style="list-style: none;">
                <li>@Loc["Click on title: edit category title"]</li>
                <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Delete category"]</span></li>
            </ul>
        </ul>

        <h5>@Loc["Data"]:</h5>
        <ul class="list-unstyled">
            <li><i class="bi bi-download"></i> <span class="mx-3">@Loc["Load examples"]:</span>@Loc["load example notes, tasks and habits"]</li>
            <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Delete all data"]:</span>@Loc["permanently delete all items"]</li>
            <li><i class="bi bi-box-arrow-right"></i> <span class="mx-3">@Loc["Export JSON"]:</span>@Loc["export categories, notes, tasks, habits and settings to a JSON file"]</li>
            <li><i class="bi bi-box-arrow-right"></i> <span class="mx-3">@Loc["Export TSV"]:</span>@Loc["export categories, notes, tasks and habits to a TSV file"]</li>
            <li><i class="bi bi-box-arrow-right"></i> <span class="mx-3">@Loc["Export YAML"]:</span>@Loc["export categories, notes, tasks, habits and settings to a YAML file"]</li>
            <li><i class="bi bi-box-arrow-right"></i> <span class="mx-3">@Loc["Export Markdown"]:</span>@Loc["export categories, notes, tasks and habits to a MD file"]</li>
            <li><i class="bi bi-box-arrow-in-right"></i> <span class="mx-3">@Loc["Import"]:</span>@Loc["import a JSON, TSV, YAML, MD or Google Keep takeout ZIP file"] <a href="https://takeout.google.com">https://takeout.google.com</a></li>
        </ul>

        <ul class="list-unstyled">
            <li><i class="bi bi-plus-square"></i> <span class="mx-3">@Loc["Add"]</span></li>
            <li><i class="bi bi-x-square"></i> <span class="mx-3">@Loc["Close"]</span></li>
            <li><i class="bi bi-check-square"></i> <span class="mx-3">@Loc["Done"]</span></li>
            <li><i class="bi bi-floppy"></i> <span class="mx-3">@Loc["Save"]</span></li>
            <li><i class="bi bi-trash"></i> <span class="mx-3">@Loc["Delete"]</span></li>
            <li><i class="bi bi-type"></i> <span class="mx-3">@Loc["Match case"]</span></li>
            <li><i class="bi bi-play"></i> <span class="mx-3">@Loc["Start"]</span></li>
            <li><i class="bi bi-arrow-counterclockwise"></i> <span class="mx-3">@Loc["Reset"]</span></li>
            <li><i class="bi bi-pause"></i> <span class="mx-3">@Loc["Pause"]</span></li>
            <li><i class="bi bi-stop"></i> <span class="mx-3">@Loc["Stop"]</span></li>
            <li><i class="bi bi-chevron-double-up"></i> <span class="mx-3">@Loc["Previous week"]</span></li>
            <li><i class="bi bi-chevron-double-left"></i> <span class="mx-3">@Loc["Previous month"]</span></li>
            <li><i class="bi bi-chevron-double-right"></i> <span class="mx-3">@Loc["Next month"]</span></li>
            <li><i class="bi bi-chevron-double-down"></i> <span class="mx-3">@Loc["Next week"]</span></li>
            <li><i class="bi bi-dash"></i> <span class="mx-3">@Loc["Decrease"]</span></li>
            <li><i class="bi bi-plus"></i> <span class="mx-3">@Loc["Increase"]</span></li>
        </ul>

    </div>
</div>

@code {
    [CascadingParameter(Name = "StateChanged")]
    public bool StateChanged { get; set; }

    [CascadingParameter(Name = "WindowDimensions")]
    public Dimensions? WindowDimensions { get; set; }

    private ElementReference WrapperElement;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LinkAttributeService.AddAttributesToLinks(WrapperElement);
        }
    }
}
